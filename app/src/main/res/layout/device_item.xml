<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/deviceRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/list_view_shape">
        <TextView
            android:id="@+id/deviceListName"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Big Johnny Gas Detector"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/deviceListStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/activeDeviceStatus"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/deviceListLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Dollard-des-Ormeaux, QC"
            android:layout_marginStart="100dp"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/edit_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/delete_icon" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>