<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/deviceRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="15dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/list_view_shape">
        <TextView
            android:id="@+id/deviceListName"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/gasDeviceName"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/deviceListStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="5dp"
            android:text="@string/inactiveDeviceStatus"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/deviceListLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/sampleDeviceLocation"
            android:layout_marginStart="130dp"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/deviceEditIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/editIconDescription"
            app:srcCompat="@drawable/edit_icon" />

        <ImageView
            android:id="@+id/deviceDeleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/deleteIconDescription"
            app:srcCompat="@drawable/delete_icon" />

        <ImageView
            android:id="@+id/deviceCalibrationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="300dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/calibrationIconDescription"
            app:srcCompat="@drawable/calibration_icon" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>