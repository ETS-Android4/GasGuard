<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="LightMode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/g_guard_theme</item>
        <item name="colorPrimaryVariant">@color/g_guard_banner</item>
        <item name="colorOnPrimary">@color/g_guard_font</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/g_guard_theme</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/g_guard_font</item>
        <item name="colorOnBackground">@color/g_guard_font</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Remove Action & Title Bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NightMode" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/g_guard_dm_theme</item>
        <item name="colorPrimaryVariant">@color/g_guard_dm_banner</item>
        <item name="colorOnPrimary">@color/g_guard_dm_font</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/g_guard_dm_theme</item>
        <item name="colorSecondaryVariant">@color/forgot_password_dm</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorOnBackground">@color/g_guard_font</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Remove Title Bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NewButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_custom</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Cloud_corner_cropped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/gg_corner_no_background</item>
    </style>

    <style name="GasGuard_logo_cropped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/gg_logo_no_background</item>
    </style>

</resources>